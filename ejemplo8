#include <iostream>
using namespace std;

int main ( int argc, char** argv)
{
    char c;
    bool test;
    cout << "Pulse teclas numericas. Acabe pulsando ESC\n";
    do {
        c= getchar();
        test = (( c>= '0') && (c<= '9'));
        if (test)
            cout << c<< "pulsando./n";
    }while (c != 27);
    return 0;
}
/*
 * Si pulsas:
 * 1
a
7
ESC
 * La salida serÃ¡:
 * Pulse teclas numericas. Acabe pulsando ESC
1pulsando./n7pulsando./n
*/